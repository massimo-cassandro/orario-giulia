{
  "env": {
    "browser": true,
    "jquery": true,
    "es6": true
  },
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],

    "eqeqeq": "warn",
    "no-extra-semi": "error",
    "semi-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "no-console": "warn",
    "no-unused-vars": ["error", {
      "vars": "all",
      "args": "after-used",
      "ignoreRestSiblings": false
    }]
  }
}
